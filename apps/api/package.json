{
  "name": "@bankdash/api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/app.js",
  "types": "dist/src/index.d.ts",
  "type": "commonjs",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "license": "MIT",
  "scripts": {
    "prisma:generate": "prisma generate",
    "prisma:reset": "prisma migrate reset -f",
    "db:rm": "docker compose rm db -s -f -v",
    "db:up": "docker compose up db -d",
    "db:reset": "npm run db:rm && npm run db:up && npm run prisma:reset",
    "dev": "tsx watch --env-file=.env src/app.ts",
    "build": "rm -rf dist && prisma generate && tsc && tsc-alias",
    "start": "node dist/src/app.js",
    "start:migrate": "prisma migrate deploy && node dist/prisma/seed.js && node dist/src/app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/autoload": "^5.9.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@prisma/client": "^5.15.0",
    "@trpc/server": "^10.45.2",
    "bcrypt": "^5.1.1",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "prisma": "^5.16.1",
    "superjson": "1.13.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@bankdash/prettier-config": "workspace:^",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.15.4",
    "typescript": "^5.5.2"
  }
}
